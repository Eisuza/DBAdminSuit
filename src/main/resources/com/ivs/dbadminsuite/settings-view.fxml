<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #8095D9;" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ivs.dbadminsuite.config.SettingsController">
    <center>
        <VBox prefHeight="246.0" prefWidth="331.0" spacing="10" style="-fx-background-color: #8095D9;">
            <Label text="URL:"/>
            <TextField fx:id="urlTextField" editable="false"/>
            <Label text="Логин:"/>
            <TextField fx:id="loginTextField" editable="false"/>
            <Label text="Пароль:"/>
            <TextField fx:id="passwordTextField" editable="false"/>
            <HBox alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="214.0" spacing="10"
                  style="-fx-background-color: #8095D9;">
                <Button fx:id="editButton" onAction="#editSettings" style="-fx-background-color: A6B3E7;"
                        text="Изменить">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="Lucida Console" size="12.0"/>
                    </font>
                    <textFill>
                        <RadialGradient centerX="0.5165745856353592" centerY="0.528436018957346" radius="0.5">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="0.7300000190734863" green="0.3748663663864136"
                                               blue="0.2773999869823456"/>
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color/>
                                    </color>
                                </Stop>
                            </stops>
                        </RadialGradient>
                    </textFill>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Button>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="214.0" spacing="10"
                  style="-fx-background-color: #8095D9;">
                <Button fx:id="saveButton" onAction="#saveSettings" style="-fx-background-color: #A6B3E7;"
                        text="Сохранить изменения" visible="false">
                    <HBox.margin>
                        <Insets top="10.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="Lucida Console" size="12.0"/>
                    </font>
                    <textFill>
                        <RadialGradient centerX="0.5165745856353592" centerY="0.528436018957346" radius="0.5">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="0.7300000190734863" green="0.3748663663864136"
                                               blue="0.2773999869823456"/>
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color/>
                                    </color>
                                </Stop>
                            </stops>
                        </RadialGradient>
                    </textFill>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Button>
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </HBox>
        </VBox>
    </center>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
</BorderPane>
